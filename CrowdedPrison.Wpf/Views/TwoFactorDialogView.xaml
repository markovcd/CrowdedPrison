<UserControl
  x:Class="CrowdedPrison.Wpf.Views.TwoFactorDialogView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:viewModels="clr-namespace:CrowdedPrison.Wpf.ViewModels"
  MinHeight="120"
  d:DataContext="{d:DesignInstance viewModels:TwoFactorDialogViewModel}"
  d:DesignHeight="120"
  d:DesignWidth="300"
  x:ClassModifier="internal"
  mc:Ignorable="d">
  <Grid Margin="10">
    <TextBox
      Width="200"
      Margin="10"
      VerticalAlignment="Top"
      materialDesign:HintAssist.Hint="Two factor code"
      Text="{Binding Code}" />
    <StackPanel
      Margin="10"
      HorizontalAlignment="Center"
      VerticalAlignment="Bottom"
      Orientation="Horizontal">
      <Button
        Width="80"
        Height="32"
        Margin="10,0"
        Command="{Binding OkCommand}"
        Content="Ok"
        IsDefault="True" />
      <Button
        Width="80"
        Height="32"
        Margin="10,0"
        Command="{Binding CancelCommand}"
        Content="Cancel"
        IsCancel="True" />
    </StackPanel>

  </Grid>
</UserControl>
