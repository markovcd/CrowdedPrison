<Window
  x:Class="CrowdedPrison.Wpf.Shell"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CrowdedPrison.Wpf"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:p="http://prismlibrary.com/"
  Title="MainWindow"
  Width="800"
  Height="450"
  x:ClassModifier="internal"
  Background="{DynamicResource MaterialDesignPaper}"
  FontFamily="{materialDesign:MaterialDesignFont}"
  TextElement.FontSize="14"
  TextElement.FontWeight="Medium"
  TextElement.Foreground="{DynamicResource MaterialDesignBody}"
  mc:Ignorable="d">
  <materialDesign:DialogHost x:Name="DialogHost" DialogOpened="OnDialogOpened">
    <materialDesign:DialogHost.DialogContent>
      <ContentControl x:Name="DialogContent" />
    </materialDesign:DialogHost.DialogContent>
    <ContentControl p:RegionManager.RegionName="{x:Static local:GlobalConstants.ShellRegionName}" />
  </materialDesign:DialogHost>


</Window>
